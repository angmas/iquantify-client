<form class="form-horizontal">
    <fieldset>
      <div id="form-group-edit-title" class="form-group  has-feedback form-group-research-title">
        <label class="col-sm-3 control-label" for="research-edit-title">Title</label>
        <div class="col-sm-8">
          {{input id="research-edit-title" type="text"  class="research-title form-control" placeholder="Title" value=research.title}}
        </div>
      </div>
      <div class="form-group">
        <label for="research-edit-description" class="col-sm-3 control-label">Description</label>
        <div class="col-sm-8">
          {{textarea id="research-edit-description" type="text" class="research-description form-control" placeholder="Description" rows="3" value=research.description}}
        </div>
      </div>
      <div class="form-group">
        <label for="research-edit-directions" class="col-sm-3 control-label">Directions</label>
        <div class="col-sm-8">
          {{textarea id="research-edit-directions" type="text" class="research-directions form-control" placeholder="Directions" rows="3" value=research.directions}}
        </div>
      </div>
      <div class="form-group">
        <label for="research-edit-announcement" class="col-sm-3 control-label">Announcement</label>
        <div class="col-sm-8">
          {{textarea id="research-edit-announcement" type="text" class="research-announcement form-control" placeholder="Announcement" rows="3" value=research.announcement.message}}
        </div>
      </div>
      <div class="form-group">
        <button {{action "goToResearches"}} type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
        <button {{action "editResearch"}} type="submit" class="btn btn-primary">Save</button>
      </div>
    </fieldset>
</form>
